---
interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  background?: 'light' | 'white' | 'dark';
}

const { id, title, subtitle, background = 'light' } = Astro.props;

const bgClasses = {
  light: 'bg-light-bg',
  white: 'bg-white',
  dark: 'bg-slate-dark text-white',
};
---

<section id={id} class:list={['py-16 md:py-24', bgClasses[background]]}>
  <div class="container mx-auto px-6">
    {(title || subtitle) && (
      <div class="max-w-2xl mx-auto text-center mb-12">
        {title && (
          <h2 class="text-3xl md:text-4xl font-bold mb-4">{title}</h2>
        )}
        {subtitle && (
          <p class:list={['text-lg', background === 'dark' ? 'text-white/80' : 'text-slate-dark/70']}>
            {subtitle}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>
