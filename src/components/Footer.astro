---
const currentYear = new Date().getFullYear();

const footerLinks = {
  platform: [
    { href: 'https://github.com/rodneygagnon/qckstrt', label: 'Source Code' },
    { href: 'https://github.com/rodneygagnon/qckstrt/blob/main/docs/README.md', label: 'Documentation' },
    { href: 'https://github.com/rodneygagnon/qckstrt/blob/main/LICENSE', label: 'License (AGPL-3.0)' },
  ],
  network: [
    { href: '/network', label: 'Network Members' },
    { href: '/join', label: 'Join the Network' },
    { href: 'https://github.com/rodneygagnon/qckstrt/blob/main/NETWORK-TERMS.md', label: 'Network Terms' },
  ],
  community: [
    { href: 'https://github.com/rodneygagnon/qckstrt/discussions', label: 'Discussions' },
    { href: 'https://github.com/rodneygagnon/qckstrt/blob/main/CONTRIBUTING.md', label: 'Contributing' },
    { href: 'https://github.com/rodneygagnon/qckstrt/blob/main/CODE_OF_CONDUCT.md', label: 'Code of Conduct' },
  ],
};
---

<footer class="bg-slate-dark text-white/80">
  <div class="container mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="md:col-span-1">
        <img
          src="/logos/svg/cwlabs-horizontal-dark.svg"
          alt="Commonwealth Labs"
          class="h-8 mb-4"
        />
        <p class="text-sm text-white/60">
          Open-source civic technology for engaged democracy.
        </p>
      </div>

      <!-- Platform Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Platform</h3>
        <ul class="space-y-2">
          {footerLinks.platform.map(link => (
            <li>
              <a
                href={link.href}
                target={link.href.startsWith('http') ? '_blank' : undefined}
                rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                class="text-sm hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Network Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Network</h3>
        <ul class="space-y-2">
          {footerLinks.network.map(link => (
            <li>
              <a
                href={link.href}
                target={link.href.startsWith('http') ? '_blank' : undefined}
                rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                class="text-sm hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Community Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Community</h3>
        <ul class="space-y-2">
          {footerLinks.community.map(link => (
            <li>
              <a
                href={link.href}
                target={link.href.startsWith('http') ? '_blank' : undefined}
                rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                class="text-sm hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="border-t border-white/10 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-white/60">
        &copy; {currentYear} Commonwealth Labs. All rights reserved.
      </p>
      <div class="flex items-center gap-4">
        <a
          href="https://github.com/rodneygagnon/qckstrt"
          target="_blank"
          rel="noopener noreferrer"
          class="text-white/60 hover:text-white transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
